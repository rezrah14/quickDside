<div id="page-content">
  <h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
  <%= gravatar_for @user, size: 200 %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-primary btn-lg" %>
  </div>
  <h3 class="text-center mt-4">Projects</h3>
  <div class="container">
    <%= render 'projects/projects_table' %>
    <div class="flickr_pagination">
      <%= will_paginate @projects, :container => false %>
    </div>
  </div>
</div>