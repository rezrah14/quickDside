<% if @project.errors.any? %>
  <div class="alert alert-danger shadow p-3 alert-dismissible fade show" role="alert">
    <h4 class="alert-heading">The following errors prevented the project from being saved:</h4>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </button>
  </div>
<% end %>