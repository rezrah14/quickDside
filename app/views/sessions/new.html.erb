<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <br>
  <div class="row justify-content-center">
    <div class="col-8">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
        <div class="form-group row ">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class="col-8"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "email" %>
          </div>
        </div>
        <br>
        <div class="form-group row ">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class="col-8"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "*******" %>
          </div>
        </div>        
        <br>
        <div class="form-group row justify-content-center">
          <%= f.submit "Log in" , class: "btn btn-primary btn-lg col-3" %>
        </div>
      <% end %>
      <div class="mb-3"> 
        <%= link_to '<<  Cancel and return to projects listing  >>', projects_path %>
      </div>
    </div>
  </div>
</div>