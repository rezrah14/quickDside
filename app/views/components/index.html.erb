<div id="page-content">
  <h1 class="text-center mt-4">Components</h1>
  <div class="container">
    <p>
      <%= link_to "Add New Component", new_project_component_path(@project), class: "btn btn-primary" %>
    </p>
    <% if @components.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @components.each do |component| %>
            <tr>
              <td><%= component.name %></td>
              <td><%= link_to "View", project_component_path(@project, component) %></td>
              <td><%= link_to "Edit", edit_project_component_path(@project, component) %></td>
              <td><%= link_to "Delete", project_component_path(@project, component), 
                data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No components available for this project.</p>
    <% end %>
  </div>
</div>
