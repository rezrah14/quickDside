<div class="container">
  <%= render "shared/errors" %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @project, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :project, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of project" %>
          </div>
        </div>
        <br>
        <div class="form-group row ">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of project" %>
          </div>
        </div>
        <br>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-primary btn-lg col-3" %>
        </div>
      <% end %>
      <div class="mb-3"> 
        <%= link_to '<<  Cancel and return to projects listing  >>', projects_path %>
      </div>
    </div>
  </div>
</div>