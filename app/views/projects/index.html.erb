<div id="page-content">
  <h1 class="text-center mt-4">projects</h1>
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Owner</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.title %></td>
            <td><%= project.description %></td>
            <td><%= project.users.first.username if  project.users.first%></td>
            <td><%=link_to "view", project_path(project)%></td>
            <td><%=link_to "edit", edit_project_path(project)%></td>
            <td><%= link_to "delete", project_path(project), 
              data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" }%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <p>
      <%= link_to 'create a new project', new_project_path %>
    </p>
  </div>
</div>

